= form_for Tweet.new(params[:tweet]) do |form|
  - if form.object.reply_to.present?
    %h2 Reply to #{form.object.reply_to.user}
  - else
    %h2 What's Happening?
  = form.hidden_field :reply_to_id
  .clearfix
    = form.text_area :text
    .hide-show
      = form.submit "Tweet", class: "btn primary"

