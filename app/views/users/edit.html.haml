%h1 Edit Your Profile

= form_for user do |form|

  %fieldset

    .name.clearfix
      = form.label :name
      .input= form.text_field :name

    .username.clearfix
      = form.label :username
      .input= form.text_field :username

    .email.clearfix
      = form.label :email
      .input= form.email_field :email

  %fieldset
    %legend Avatar

    - if user.avatar?
      .avatar_cache.clearfix
        %label Current Avatar
        .input
          = image_tag form.object.avatar.list.url, alt: user, width: 48, height: 48
          = form.hidden_field :avatar_cache

      .remove_avatar.clearfix
        .input.check_box
          = form.check_box :remove_avatar
          = form.label :remove_avatar, "Remove Avatar"

    .avatar.clearfix
      = form.label :avatar, "Upload New Avatar"
      .input= form.file_field :avatar

    .submit.clearfix
      .actions
        = form.submit "Update Profile", class: "btn primary"
